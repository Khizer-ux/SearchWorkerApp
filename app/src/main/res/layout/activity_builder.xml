<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00897B"
    tools:context=".Builder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Worker App"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Personal Information"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        />

    <EditText
        android:id="@+id/etbuildname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:hint="Name"
        />

    <EditText
        android:id="@+id/etbuildfname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:hint="FatherName"
        />
    <EditText
        android:id="@+id/etbuilddob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:hint="Dob"
        />

    <EditText
        android:id="@+id/etbuildcontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:hint="Contact"
        />
    <EditText
        android:id="@+id/etbuildaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:hint="Address"
        />
    <EditText
        android:id="@+id/etbuildemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:hint="Email"
        />

    <EditText
        android:id="@+id/etbuildpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:hint="Password"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Education"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <EditText
            android:id="@+id/etbuildedu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:hint="Education"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Projects"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <EditText
            android:id="@+id/etbuildprojects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:hint="Projects"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Research Background"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <EditText
            android:id="@+id/etbuildresearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:hint="Research Background"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Key Skills"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <EditText
            android:id="@+id/etbuildskill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:hint="Skills"
            />

        <Button
            android:id="@+id/btnbuildgenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            android:text="Generate CV"
            android:textSize="30dp"/>

    </LinearLayout>

</ScrollView>